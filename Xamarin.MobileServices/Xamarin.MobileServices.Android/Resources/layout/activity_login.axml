<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

 <Button
        android:id="@+id/btn_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_google"
        android:layout_alignLeft="@+id/tv_subtitle"
        android:layout_marginBottom="56dp"
        android:background="@drawable/facebook"
        android:height="24dip"
        android:width="24dip" />

    <Button
        android:id="@+id/btn_microsoft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_google"
        android:layout_alignBottom="@+id/btn_google"
        android:layout_alignLeft="@+id/btn_facebook"
        android:background="@drawable/windows"
        android:height="24dip"
        android:width="24dip" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_title"
        android:layout_marginBottom="171dp"
        android:background="@drawable/google"
        android:height="24dip"
        android:width="24dip" />

    <Button
        android:id="@+id/btn_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_facebook"
        android:layout_alignBottom="@+id/btn_facebook"
        android:layout_alignLeft="@+id/btn_google"
        android:background="@drawable/twitter"
        android:height="24dip"
        android:width="24dip" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="@string/login_subtitle"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_subtitle"
        android:layout_alignRight="@+id/tv_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="@string/login_title"
        android:textColor="@color/white" />

</RelativeLayout>
